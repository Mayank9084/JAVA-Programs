import java.util.Scanner;
public class Factorial {
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int fact = 1;

        // Using for loop


       // for(int i=1; i<=n; i++){
           // fact = fact*i;
       // }
       // System.out.println(fact);

        // using While LOOP
        int i = 1;
        while(i<=n){
            fact *= i ;
            i++;
        }
        System.out.println(fact);
    }
}
